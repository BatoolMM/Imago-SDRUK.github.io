{
	"name": "website",
	"private": true,
	"version": "1.20.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"types:directus": "cd ../backend/data/directus && pnpm run types && cp model.d.ts ../../../website/src/lib/types/directus/index.d.ts"
	},
	"devDependencies": {
		"@arturoguzman/art-ui": "^0.14.0",
		"@directus/sdk": "^20.0.0",
		"@eslint/compat": "^1.3.1",
		"@eslint/js": "^9.30.1",
		"@fontsource-variable/figtree": "^5.2.8",
		"@fontsource-variable/noto-sans": "^5.2.7",
		"@fontsource-variable/quicksand": "^5.2.8",
		"@fontsource-variable/space-grotesk": "^5.2.8",
		"@fontsource/cousine": "^5.2.6",
		"@playwright/test": "^1.53.2",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.1",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^11.0.3",
		"@semantic-release/npm": "github:semantic-release/npm",
		"@semantic-release/release-notes-generator": "^14.0.3",
		"@sindresorhus/slugify": "^2.2.1",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.22.2",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"@tabler/icons-svelte": "^3.34.0",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"@types/luxon": "^3.6.2",
		"@types/node": "^24.0.10",
		"autoprefixer": "^10.4.21",
		"eslint": "^9.30.1",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^2.46.1",
		"feed": "^5.1.0",
		"globals": "^16.3.0",
		"lottie-web": "^5.13.0",
		"luxon": "^3.6.1",
		"mdsvex": "^0.12.6",
		"motion": "^12.22.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.13",
		"semantic-release": "^24.2.6",
		"svelte": "^5.34.9",
		"svelte-check": "^4.2.2",
		"svelte-seo": "^1.6.1",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.35.1",
		"typescript-svelte-plugin": "^0.3.48",
		"vite": "^6.3.5",
		"vitest": "^3.2.4"
	},
	"release": {
		"branches": [
			"main"
		],
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			"@semantic-release/changelog",
			"@semantic-release/npm",
			[
				"@semantic-release/github",
				{
					"assets": [
						{
							"path": "dist.zip",
							"label": "Distribution"
						}
					]
				}
			],
			[
				"@semantic-release/git",
				{
					"assets": [
						"package.json",
						"CHANGELOG.md"
					],
					"message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
				}
			]
		]
	},
	"pnpm": {
		"ignoredBuiltDependencies": [
			"esbuild"
		]
	}
}
